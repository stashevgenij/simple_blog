.card-header
  .d-flex
    %div
      %span By
      %span.text-primary= post.user.email
      %span On
      %span.text-primary= post.created_at.strftime("%F %H:%M")
    - if current_user == post.user
      .post-control-links.ml-5
        = link_to 'Edit Post', edit_post_path(post)
        \|
        = link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger"